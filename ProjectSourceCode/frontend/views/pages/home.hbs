<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Progress + Calendar + Add Class</title>
  <style>
    body {
      margin: 0;
      height: 100vh;
      background-color: #f0f0f0;
      font-family: sans-serif;
    }

    /* Circular Progress */
    .circular-progress {
      position: fixed;
      top: 200px;
      right: 200px;
      width: 80px;
      height: 80px;
    }

    .circular-progress svg {
      transform: rotate(-90deg);
    }

    .circular-progress circle {
      fill: none;
      stroke-width: 10;
    }

    .circular-progress .bg {
      stroke: #eee;
    }

    .circular-progress .progress {
      stroke: #3498db;
      stroke-dasharray: 251.2;
      stroke-dashoffset: calc(251.2 * (1 - 0.75));
      /* 75% progress */
      transition: stroke-dashoffset 0.5s ease;
    }

    .circular-progress .progress-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 16px;
      font-weight: bold;
      color: #3498db;
      pointer-events: none;
    }

    /* Calendar Button */
    .calendar-button {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 12px 16px;
      background-color: #2ecc71;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      transition: background-color 0.3s ease;
    }

    .calendar-button:hover {
      background-color: #27ae60;
    }

    /* Add Class Button */
    .add-class-button {
      position: fixed;
      top: 50%;
      left: 20px;
      transform: translateY(-50%);
      padding: 12px 16px;
      background-color: #e67e22;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      transition: background-color 0.3s ease;
    }

    .add-class-button:hover {
      background-color: #d35400;
    }
  </style>
</head>

<body>
  {{#if message}}
  <div id="fade-message" style="
    background-color: #dff0d8;
    color: #3c763d;
    padding: 15px;
    text-align: center;
    font-weight: bold;
    font-family: Poppins, sans-serif;
    border-bottom: 2px solid #c3e6cb;">
    {{message}}
  </div>
  <script>
    setTimeout(() => {
      const el = document.getElementById('fade-message');
      if (el) {
        el.style.transition = 'opacity 0.8s ease';
        el.style.opacity = '0';
        setTimeout(() => el.remove(), 1000);
      }
    }, 5000);
  </script>
  {{/if}}

  <!-- Circular Progress Bar -->
  <div class="circular-progress">
    <svg width="80" height="80">
      <circle class="bg" cx="40" cy="40" r="40" />
      <circle class="progress" cx="40" cy="40" r="40" />
    </svg>
    <div class="progress-text">75%</div>
  </div>

  <!-- Calendar Button -->
  <button class="calendar-button" onclick="location.href='/calendar'">
    ðŸ“… Calendar
  </button>

  <!-- Add Class Button -->
  <button class="add-class-button">
    âž• Add Class
  </button>

</body>

</html>